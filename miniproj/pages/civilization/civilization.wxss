/**index.wxss**/
.header{
  /* text-align: center; */
  display: flex;
  position: fixed;
  height: 40rpx;
  width: 100%;
  align-items: flex-end;
  background-color: #F0F0F0;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
}

.title{
  width: 33%;
  text-align: center;
  font-family: STSongti-SC-Bold;
  font-size: 36rpx;
  color: #1C1C1C;
  letter-spacing: 8.36rpx;
}

.header .category{
    /* 详细: */
    font-family: STSongti-SC-Bold;
    font-size: 28rpx;
    color: #5C5C5C;
    letter-spacing: 6.5rpx;
    width: 33%;
    text-align: center;
    text-decoration: underline;
    /* padding-right: 80rpx; */
}

.headerfirst{
  float: right;
  width: 33%;
}

.items {
  margin-top: 130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 95%;
}

.item{
  display: flex;
  flex-direction: row;
  width: 95%;
  height: 96rpx;
  background-color: #EDEDED;
  margin: 5rpx 0 5rpx 0;
  justify-content: center;
  align-items: center;
}

.item .date{
  width: 20%;
  font-size: 26rpx;
  color : #7A7A7A;
  padding-right: 50rpx;
  text-align: right;
}

.item .title{
  width: 80%;
  font-size: 28rpx;
  color : #7A7A7A;
}

.end{
  margin-top: 50rpx;
  padding-bottom: 50rpx;

}

.end text{
  /* - end -: */
  font-family: AmericanTypewriter;
  font-size: 28rpx;
  color: #929090;
  letter-spacing: 6.5rpx;
  text-align: center;
}

