/**index.wxss**/
.header{
  /* text-align: center; */
  display: flex;
  position: fixed;
  height: 40rpx;
  width: 100%;
  align-items: flex-end;
}

.title{
  width: 33%;
  text-align: center;
  font-family: STSongti-SC-Bold;
  font-size: 36rpx;
  color: #1C1C1C;
  letter-spacing: 8.36rpx;
}

.header .category{
    /* 详细: */
    font-family: STSongti-SC-Bold;
    font-size: 28rpx;
    color: #5C5C5C;
    letter-spacing: 6.5rpx;
    width: 33%;
    text-align: center;
    text-decoration: underline;
    /* padding-right: 80rpx; */
}

.headerfirst{
  float: right;
  width: 33%;
}

.items {
  margin-top: 130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item{
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 60rpx;
}

.item .date{
  width: 20%;
  font-size: 30 rpx;
}

